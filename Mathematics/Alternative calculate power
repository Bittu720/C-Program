#include <stdio.h>
int power(int x, int y) {
    int res = 1; 

    while (y > 0) {
        if (y & 1)
            res *= x;
        y = y >> 1;
        x *= x;
    }
    return res;
}

int main() {
    int base, exponent;
    printf("Enter base: ");
    scanf("%d", &base);
    
    printf("Enter exponent: ");
    scanf("%d", &exponent);
    printf("Power is %d\n", power(base, exponent));

    return 0;
}
