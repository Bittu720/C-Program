#include <stdio.h>

int fact(int n) {
    if (n == 0)
        return 1; 
    
    return n * fact(n - 1); 
}

int main() {
    int number;
    printf("Enter a number: ");
    scanf("%d", &number);
    if (number < 0)
        printf("Factorial is not defined for negative numbers.\n");
    else
        printf("Factorial of %d is %d\n", number, fact(number));

    return 0;
}
