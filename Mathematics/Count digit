#include <stdio.h>

int countDigits(int x) {
    int res = 0;
    
    if (x == 0)  
        return 1; 
    
    if (x < 0)
        x = -x; 
    
    while (x > 0) {
        x = x / 10;
        res++;
    }
    
    return res;
}

int main() {
    int number;
    
    // Taking user input
    printf("Enter an integer: ");
    scanf("%d", &number);
    
    printf("Number of digits: %d\n", countDigits(number));

    return 0;
}


//output:
Enter an integer: 789
Number of digits: 3

