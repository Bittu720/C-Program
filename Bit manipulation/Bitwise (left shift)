#include <stdio.h>
int main() {
    int x, y;
    printf("Enter an integer (x): ");
    scanf("%d", &x);
    printf("Enter the number of positions to shift (y): ");
    scanf("%d", &y);
    printf("%d << 1 = %d\n", x, x << 1);
    printf("%d << 2 = %d\n", x, x << 2);
    printf("%d << %d = %d\n", x, y, x << y);
    return 0;
}
