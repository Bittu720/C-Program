#include <stdio.h>
int fact(int n, int k) {
    if (n == 0 || n == 1)
        return k; 
    return fact(n - 1, k * n);
}

int main() {
    int num;
    printf("Enter a number: ");
    scanf("%d", &num);
    if (num < 0)
        printf("Factorial is not defined for negative numbers.\n");
    else
        printf("Factorial of %d is %d\n", num, fact(num, 1));
    
    return 0;
}
